<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="valueSwitcherStyle" format="reference" />

    <declare-styleable name="DefaultStylesTheme" format="reference">
        <attr name="validationInputViewStyle" format="reference" />
        <attr name="textProgressBarStyle" format="reference" />
        <attr name="roundTextViewStyle" format="reference" />

        <attr name="dayViewStyle" format="reference" />
        <attr name="monthDayViewStyle" format="reference" />

        <attr name="timeRangeViewStyle" format="reference" />
        <attr name="monthViewStyle" format="reference" />
    </declare-styleable>

    <attr name="validationInputLayoutStyle" format="reference" />

    <declare-styleable name="TextProgressBar">
        <attr name="progressText" format="string" />
        <attr name="progressFillColor" format="color" />
        <attr name="progressTextColor" format="color" />
        <attr name="progressColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LocaleTextView">
        <attr name="android:text" />
    </declare-styleable>

    <declare-styleable name="LocaleButton">
        <attr name="android:text" />
    </declare-styleable>

    <declare-styleable name="LocaleSwitch">
        <attr name="android:text" />
    </declare-styleable>

    <declare-styleable name="LocaleEditText">
        <attr name="android:text" />
        <attr name="android:hint" />
    </declare-styleable>

    <declare-styleable name="LocaleTextInputLayout">
        <attr name="android:hint" />
    </declare-styleable>

    <declare-styleable name="FloatingListView" />

    <declare-styleable name="MerseyRecyclerView">
        <attr name="maxHeight" format="dimension" />
        <attr name="saveScrollPosition" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MaxWidthTabLayout">
        <attr name="maxWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleTextView">
        <attr name="сolor" format="color" />
        <attr name="text" />
        <attr name="textColor" format="color" />
        <attr name="android:textSize" />
        <attr name="font" />

        <attr name="image" format="reference" />
    </declare-styleable>

    <declare-styleable name="AnimatedCheckButton">
        <attr name="android:checkable" />
        <attr name="color" format="color" />
        <attr name="middleColor" format="color" />
        <attr name="checkedColor" format="color" />
        <attr name="duration" format="integer" />
        <attr name="android:checked" />
        <attr name="defaultTextColor" format="color" />
        <attr name="checkedTextColor" format="color" />
        <attr name="defaultText" format="string" />
        <attr name="checkedText" format="string" />
    </declare-styleable>

    <declare-styleable name="AnimatedCheckImageButton">
        <attr name="android:checkable" />
        <attr name="color" />
        <attr name="middleColor" />
        <attr name="checkedColor" />
        <attr name="duration" />
        <attr name="android:checked" />
        <attr name="defaultImageColor" format="color" />
        <attr name="checkedImageColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundTextView">
        <attr name="roundFillColor" format="color" />
        <attr name="roundCornerRadius" format="dimension" />
        <attr name="roundStrokeColor" format="color" />
        <attr name="roundStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ValidationInputView">
        <attr name="validNeedFillingStateOnInit" format="boolean" />
        <attr name="validInputWidth" format="dimension" />
        <attr name="validInputHeight" format="dimension" />
        <attr name="validForceState" format="boolean" />
        <attr name="validHintText" format="string" />
        <attr name="validTextEditText" format="string" />
        <attr name="validTextSuccess" format="string" />
        <attr name="validTextError" format="string" />
        <attr name="validTextDefault" format="string" />
        <attr name="validMaxLength" format="integer" />
        <attr name="validDebounce" format="integer" />
        <attr name="validCursorVisibility" format="boolean" />
        <!-- взял с системных атрибутов -->
        <attr name="validInputType">
            <flag name="none" value="0x00000000" />
            <flag name="text" value="0x00000001" />
            <flag name="textEmailAddress" value="0x00000021" />
            <flag name="textPersonName" value="0x00000061" />
            <flag name="textPostalAddress" value="0x00000071" />
            <flag name="textPassword" value="0x00000081" />
            <flag name="number" value="0x00000002" />
            <flag name="numberPassword" value="0x00000012" />
            <flag name="phone" value="0x00000003" />
            <flag name="datetime" value="0x00000004" />
            <flag name="date" value="0x00000014" />
            <flag name="time" value="0x00000024" />
        </attr>

        <attr name="validIconMode">
            <enum name="custom" value="-1" />
            <enum name="none" value="0" />
            <enum name="password_toggle" value="1" />
            <enum name="clear_text" value="2" />
            <enum name="dropdown_menu" value="3" />
        </attr>

        <attr name="validStrokeColor" format="color" />
        <attr name="validSuccessStrokeColor" format="color" />
        <attr name="validErrorStrokeColor" format="color" />

        <attr name="validHintColor" format="color" />
        <attr name="validSuccessHintColor" format="color" />
        <attr name="validErrorHintColor" format="color" />

        <attr name="validIcon" format="reference" />
        <attr name="validSuccessIcon" format="reference" />
        <attr name="validErrorIcon" format="reference" />

        <attr name="validMessageColor" format="color" />
        <attr name="validSuccessMessageColor" format="color" />
        <attr name="validErrorMessageColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ValueSwitcher">
        <attr name="switchTitle" format="string" />
        <attr name="switchEntryValues" format="reference" />
        <attr name="switchEntries" format="reference" />
        <attr name="switchType" format="enum">
            <enum name="text" value="0" />
            <enum name="image" value="1" />
        </attr>
        <attr name="switchButtons" format="enum">
            <enum name="arrows" value="0" />
        </attr>

        <attr name="switchTextColor" format="color" />
        <attr name="switchButtonColor" format="color" />
    </declare-styleable>

<!-- Calendar -->

    <declare-styleable name="DayView">
        <attr name="day" format="integer" />

        <attr name="dayTextSize" format="dimension" />
        <attr name="dayTextColor" format="color" />
        <attr name="dayBackgroundColor" format="color" />

        <attr name="dayIsWeekend" format="boolean" />
        <attr name="dayWeekendTextColor" format="color" />
        <attr name="dayWeekendBackgroundColor" format="color" />

        <attr name="dayCornerRadius" format="dimension" />
        <attr name="dayContentPadding" format="dimension" />

        <attr name="dayCropCircle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SimpleDayView" parent="DayView" />

    <declare-styleable name="MonthDayView" parent="SimpleDayView">
        <attr name="monthIsOutMonthDay" format="boolean"/>
        <attr name="monthPrevDayTextColor" format="color" />
        <attr name="monthPrevDayBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TimeRangeView">
        <attr name="dayHorizontalSpacing" format="dimension" />
        <attr name="dayVerticalSpacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="WeekView" parent="TimeRangeView"/>

    <declare-styleable name="MonthView" parent="TimeRangeView">
        <attr name="monthShowOutMonthDays" format="boolean" />
    </declare-styleable>

</resources>