<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_hovered="true"
        android:color="?attr/colorAccent"/> <!-- pressed -->
    <item android:state_pressed="true"
        android:color="?attr/colorAccent"/> <!-- pressed -->
