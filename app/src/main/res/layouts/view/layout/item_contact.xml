<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.merseyside.utils.binding.BU"/>

        <variable
            name="model"
            type="com.merseyside.merseyLib.features.adapters.contacts.model.ContactItemViewModel" />

        <variable
            name="selectCallback"
            type="com.merseyside.adapters.feature.selecting.OnSelectCallback" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/small_spacing"
        android:paddingVertical="@dimen/very_small_spacing">

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{model.item}"
            android:onClick="@{view -> selectCallback.onSelect(model)}"
            backgroundColor="@{model.selectState.selectedObservable ? @color/red : @color/transparent}"/>

    </FrameLayout>

</layout>